@model App.Models.ApplicationUser

@using (Html.BeginForm("Update", "UserManagement", FormMethod.Post, new { id = "userForm" }))
{
    @Html.HiddenFor(x => x.Id) 
    <div class="row">
        <div class="col-sm-4 form-group">
            <label>First Name</label>
            <input type="text" class="form-control input-sm requiredField" placeholder="First Name" id="firstName" value="@Model.FirstName">
        </div>
        <div class="col-sm-4 form-group">
            <label>Last Name</label>
            <input type="text" class="form-control input-sm requiredField" placeholder="Last Name" id="lastName" value="@Model.LastName">
        </div>
        <div class="col-sm-4 form-group">
            <label>Email</label>
            <input type="email" class="form-control input-sm requiredField" placeholder="E-mail" id="email" value="@Model.Email">
        </div>
    </div>

    <div class="row border-head">
        <div class="col-sm-4 form-group">
            <label>Address Line - 01</label>
            <input type="text" class="form-control input-sm requiredField" placeholder="Address Line 01" id="addressLine01" value="@Model.AddressLine01">
        </div>
        <div class="col-sm-4 form-group">
            <label>Address Line - 02</label>
            <input type="text" class="form-control input-sm" placeholder="Address Line 02" id="addressLine02" value="@Model.AddressLine02">
        </div>
        <div class="col-sm-4 form-group">
            <label>City</label>
            <input type="text" class="form-control input-sm requiredField" placeholder="City" id="city" value="@Model.City">
        </div>
    </div>
    <div class="row border-head">
        <div class="col-sm-4 form-group">
            <label>Mobile Number</label>
            <input type="text" class="form-control input-sm requiredField" placeholder="Mobile Number" id="mobileNo" value="@Model.PhoneNumber">
        </div>
        <div class="col-sm-4 form-group">
            <label>Home Phone Number</label>
            <input type="text" class="form-control input-sm" placeholder="Home Number" id="phoneNo" value="@Model.HomePhoneNumber">
        </div>
        <div class="col-sm-4 form-group">
            <label>Birth of Date</label>
            <input type="text" class="form-control input-sm requiredField" id="birthOfDate">
        </div>
    </div>
    <div class="row border-head">
        <div class="col-sm-4 form-group">
            <label>Is Active</label>
            <div class="checkbox checkbox-success checkbox-circle">
                @if (@Model.IsActive)
                {
                    <input id="isActive" class="styled" type="checkbox" checked>
                }
                else
                {
                    <input id="isActive" class="styled" type="checkbox">
                }

                <label for="isActive">
                </label>
            </div>

        </div>
        
    </div>

   <div class="row">
            <div class="col-sm-6 form-group">
                <button type="submit" class="btn btn-primary"><i class="fa fa-save"></i> Update</button>
                <button class="btn btn-danger btn-primary" id="modal-cancel" type="button"><i class="fa fa-ban"></i> Cancel</button>
            </div>
    </div>

}

<script type="text/javascript">
    function intializeUserEditView() {
        $("#birthOfDate").ejDatePicker({ value: new Date("@Model.BirthOfDate.Value.ToShortDateString()")});

        $("#userForm").submit(function (event) {

            event.preventDefault();
            gridActionEvent.onClickUpdateBtn($(this));
        });

        $("#modal-cancel").on('click', function() {
            userUpdateModal.close();
        });

    }
</script>